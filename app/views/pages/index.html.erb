<p id="notice"><%= notice %></p>

<h1>Pages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Wiki</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.content %></td>
        <td><%= link_to 'Show Wiki', page.wiki %></td>
        <td><%= page.wiki.title %></td>
        <td><%= link_to 'Show', wiki_page_path(@wiki, page) %></td>
        <td><%= link_to 'Edit', edit_wiki_page_path(page.wiki.id, page.id) %></td>
        <td><%= link_to 'Destroy', wiki_page_path(@wiki, page.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_wiki_page_path %>
